<style>
  h1 {
    text-align: center;
  }
</style>

<p style="color: green"><%= notice %></p>

<h1>Ordenes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Monto</th>
      <th scope="col">Fecha</th>
      <th scope="col">Cliente</th>
      <th scope="col">Producto</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <th scope="row"> <%= order.id %> </th>
        <td> <%= order.monto %> </td>
        <td> <%= order.fechaorden %> </td>
        <td> <%= order.client.nombre %> </td>
        <td> <%= order.product.nombre %> </td>
        <td><%= link_to "Mostrar orden", order, class:"btn btn-outline-dark btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

